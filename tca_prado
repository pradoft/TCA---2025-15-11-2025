    strcpy(h.Chunin, "Chunin");
    strcpy(h.Jounin, "Jounin");
    strcpy(h.Anbu, "Anbu");
    strcpy(h.Kage, "Kage");
    strcpy(h.TokeJounin, "Tokebetsu Jounin");
}

