void alterar_jutsu_de_cla(int indice, int op);
void alterar_jutsu_de_ninja(int op, int indice);

void excluir_jutsu_cla(int jutsu_cla);
void excluir_jutsu_ninja(int ninja_jutsu);
void excluir_jutsu(int ex_jutsu);

void excluir_cla_ninja(int cla_ninja);
void excluir_cla(int clas);

void excluir_ninja_missao(int ninja_missao);
void excluir_ninja(int ninjago);

void excluir_missao(int ex_missao);

void verifica_opcao(int op);
void verifica_inclusao(int opcao);
void verifica_alterar(int opcao);
int verifica_numcla();
int verifica_indice_cla(int indice_c);
int existencia_jutsu(char straux[100]);
int existencia_cla(char straux[100]);
int existencia_kekkei(char straux[100]);
int existencia_ninja(char straux[100]);
int verifica_nome_ninja(char straux[100]);
void adiciona_hierarquia(int num, char straux[100]);
int verifica_anterior(int anterior, int ninja_atual);
int jutsu_de_cla(int indice, int cla_atual);
int verifica_titulo_missao(char straux[100]);
int verifica_ninja_missao(int ninja);
int verifica_se_lider_em_missao(int lider);
int verifica_sim_nao(char straux[10]);
void verifica_alterar(int alternar);
int verifica_jutsu_em_lugar(int jutsu_lugar);
void verifica_excluir(int op);
void verifica_listar(int op);

void inclusao_jutsu();
void inclusao_cla();
void inclusao_ninja();
void inclusao_missao();

void alterar(int altera, int indice, int caso);
void alterar_op_elementos_jutsu_menu();
void opcao_elemento_jutsu(int opcao, int indice);
void opcao_alterar_jutsu_de_ninja();
void opcao_alterar_jutsu_de_cla();
void gerenciar_ninjas_missao(int indice_missao);

void cria_jutsu();
void cria_cla();
void cria_ninja();
void cria_missao();

void mensagem_erro(int erro);

void config_string(char *straux);
void PAUSE();

void escolha_jutsu();
void escolha_cla();
void escolha_jutsu_de_cla();
void escolha_ninja();
void escolha_rank();
void rank_escolhido(int rank, int missao_atual);
void escolha_status();
void status_escolhido(int status, int missao_atual);
void escolha_missao();

void imprime_jutsu();
void imprime_cla();
void imprime_hierarquia();

void op_listar_jutsu(int opcao);
void op_listar_cla(int opcao);
void op_listar_ninja(int opcao);
void op_listar_missao(int opcao);

int ler_intervalo(int min, int max);

int main()
{
    int opcao = 1;
    recupera_dados();
    system("clear");
    while (opcao != 5)
    {
        menu_crud();
        opcao = ler_intervalo(1, 5);
        system("clear");
        verifica_opcao(opcao);
    }
    salva_dados();
    return 0;
}

void menu_crud()
{
    printf("\n=========================================\n");
    printf("            CRUD MUNDO NINJA            ");
    printf("\n=========================================\n\n");
    printf("   [1] - Incluir\n");
    printf("   [2] - Alterar\n");
    printf("   [3] - Excluir\n");
    printf("   [4] - Listar\n");
    printf("   [5] - Sair\n");
    printf("\n-----------------------------------------\n");
    printf("   Escolha uma opção: ");
}

