#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

typedef struct
{
    char *nome_jutsu;
    char *tipo_jutsu;
    char **elemento_jutsu;
    int custo_chakra;
    int poder_chakra;
    int numE;
} TJutsu;

typedef struct
{
    char *nome_cla;
    char *kekkei_genkai;
    int *jutsus_cla;
    int qtd_jutsus;
} TCla;

typedef struct
{
    char *nome_ninja;
    int n_hierarquia;
    char *hierarquia;
    int qtd_chakra;
    int indice_cla;
    int qtd_jutsus;
    int *jutsus_ninja;
    int qtd_indice;
    int numEN;
    char **elementos_ninja;
} TNinja;

typedef struct
{
    char *titulo;
    int lider;
    char rank;
    char *status;
    int *ninjas_participando;
    int qtd_ninjas;
} TMissao;

typedef struct
{
    char estudante[50];
    char Genin[50];
    char Chunin[50];
    char Jounin[50];
    char Kage[50];
    char Anbu[50];
    char TokeJounin[50];
} THierarquia;

TJutsu *jutsu;
TCla *cla;
TNinja *ninja;
TMissao *missao;
THierarquia h;
int numJ = 0;
int numC = 0;
int numN = 0;
int numM = 0;

void salva_dados();
void recupera_dados();

void menu_crud();
void menu_inclusao();
void menu_alterar();
void menu_exclusao();
void menu_listar();

void alterar_menu_cla();
